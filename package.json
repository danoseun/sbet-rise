{
  "name": "senior-backend-engineer-test-rise",
  "version": "1.0.0",
  "description": "risevest test",
  "main": "app.js",
  "scripts": {
    "start:dev": "ts-node-dev -r tsconfig-paths/register -r ts-node-dev --respawn ./src/server.ts",
    "migrate:dev": "ts-node ./src/database/migrations",
    "seed:dev": "ts-node ./src/database/seeders",
    "start": "node dist/server.js",
    "prebuild:dev": "rm -rf dist/*",
    "prebuild": "rm -rf dist/*",
    "build:dev": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist && tsc --watch --preserveWatchOutput",
    "build": "tsc",
    "buildtodist": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s . -o ./dist",
    "prettier": "prettier \"**/*.+(ts|js|json)\"",
    "lint": "eslint --ext .ts,.js src/**",
    "lint-fix": "npm run lint -- --fix",
    "check-format": "npm run prettier -- --check",
    "format": "npm run prettier -- --write",
    "test": "NODE_ENV=test npm run migrate:dev&&jest index.spec.ts --runInBand --testTimeout=40000 --forceExit --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danoseun/sbet-rise.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/danoseun/sbet-rise/issues"
  },
  "homepage": "https://github.com/danoseun/sbet-rise#readme",
  "dependencies": {
    "app-root-path": "^3.1.0",
    "bcrypt": "^5.1.1",
    "celebrate": "^15.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "http-status-codes": "^2.2.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pg-format": "^1.0.4",
    "tscpaths": "^0.0.9",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/debug": "^4.1.8",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.5",
    "@types/node": "^20.5.4",
    "@types/pg": "^8.10.2",
    "@types/pg-format": "^1.0.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
